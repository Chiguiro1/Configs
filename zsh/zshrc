# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# Arreglo para teclas backspace
stty erase ^H
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Zsh configuration for Arch Linux with Powerlevel10k

# Path to Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Theme: Powerlevel10k
ZSH_THEME="powerlevel10k/powerlevel10k"

# Enable Oh My Zsh plugins
plugins=(
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
  common-aliases
)

# Load Oh My Zsh
source $ZSH/oh-my-zsh.sh

# Powerlevel10k instant prompt (speed up shell startup)
if [[ -r "$HOME/.p10k.zsh" ]]; then
  source "$HOME/.p10k.zsh"
fi

# ─── ALIASES MODERNOS ─────────────────────────────

# eza (mejor ls)
alias ls='eza --icons'
alias ll='eza -lF --icons'
alias la='eza -laF --icons'
alias lt='eza -T --level=2 --icons' 
alias l='eza -F --icons'

# bat (mejor cat)
alias cat='bat --theme=Nord --style=plain --paging=never'

# Git
alias gs='git status'
alias gp='git push'
alias gl='git log --oneline --graph --decorate --all'

# Pacman (gestor de paquetes de Arch)
alias update='sudo pacman -Syu'
alias cleanup='sudo pacman -Rns $(pacman -Qdtq)'

# Navegación
alias ..='cd ..'
alias ...='cd ../..'

# ─── OPCIONES DE ZSH ──────────────────────────────

# Correct minor typos in commands
setopt correct

# Share command history across sessions
setopt share_history

# Append to the history file, don't overwrite it
setopt append_history

# Use modern completion system
autoload -Uz compinit
compinit

# Editor por defecto
export EDITOR='nano'

# Colores para manpages
export LESS_TERMCAP_mb=$'\E[1;31m'
export LESS_TERMCAP_md=$'\E[1;36m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[1;32m'

# PATH personal
export PATH="$HOME/.local/bin:$HOME/bin:$PATH"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
